            <tr id="nochange">
                <td>CTITLE</td><td>VALUE</td>
            </tr>
            <tr id="text">
                <td>CTITLE</td><td><input id="TITLE" type="text" value="VALUE"></td>
            </tr>
            <tr id="date">
                <td>CTITLE</td><td><input id="TITLE" type="date" value="VALUE"></td>
            </tr>
            <tr id="number">
                <td>CTITLE</td><td><input id="TITLE" type="number" value="VALUE"></td>
            </tr>
            <tr id="selection">
                <td>CTITLE</td><td><span id="TITLE" type="text" >VALUE</span>
                <select id="select_TITLE">
                  <option value="">--</option>
                  <!-- these options will be changed eventually too allow the program to assign the most recently selected options to appear in order -->
                  <option value="NAME_ID">NAME</option>
                  <option value="NAME_ID">NAME</option>
                  <option value="NAME_ID">NAME</option>
                  <option value="NAME_ID">NAME</option>
                </select></td>
            </tr>
        </table>
    </div>
    
    <div class="assetTableContainer">
        <table class="assetTable">
            <thead>
                <tr>
                    <th>Tag (Qty)</br>Parent Tag</th><th>Customer</br>Received</th><th>Customer Tag</br>Serial Number</th><th>Asset Type</th><th>Manufacturer-Product</br>Model</th><th>Location</th>
                </tr>
